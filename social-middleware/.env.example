NODE_ENV=development
PORT=3001
APP_NAME=social-middleware
MONGO_USER=username
MONGO_PASS=password
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=db-name
MONGO_USE_TLS=false
MONGO_TLS_CA_FILE=/etc/mongodb-ca/service-ca.crt
FORM_ACCESS_TOKEN_EXPIRY_MINUTES=30
REDIS_HOST=localhost
REDIS_PORT=6379
QUEUE_JOB_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# BCSC OAuth Configuration (for direct OAuth mode when USE_KONG_OIDC=false)
BCSC_CLIENT_ID=your-bcsc-client-id
BCSC_CLIENT_SECRET=your-bcsc-client-secret
BCSC_AUTHORITY=https://idtest.gov.bc.ca/oauth2

# Siebel OAuth Configuration
SIEBEL_AUTH_URL=your-value
SIEBEL_TOKEN_URL=your-value
SIEBEL_CLIENT_ID=your-value
SIEBEL_CLIENT_SECRET=your-value
SIEBEL_APS_BASE_URL=your-value
SIEBEL_TRUSTED_USERNAME=your-value
OAUTH_REDIRECT_URI=your-value
OAUTH_SCOPE=your-value

CASE_CONTACTS_ENDPOINT=your-value
SERVICE_REQUESTS_ENDPOINT=your-value

# Authentication Configuration
# USE_KONG_OIDC: Set to 'true' to use Kong OIDC plugin authentication (production)
#                Set to 'false' to use direct OAuth flow (not yet implemented)
USE_KONG_OIDC=true

# MIDDLEWARE_URL: The public URL where this middleware is accessible
# Used for logout redirects to Kong's OIDC logout endpoint
MIDDLEWARE_URL=https://social-middleware.test.api.gov.bc.ca

# Cookie Configuration
# For local development: leave empty or set to localhost
# For test/prod: set to parent domain (e.g., .test.api.gov.bc.ca)
COOKIE_DOMAIN=
